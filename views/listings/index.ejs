<%layout("/layouts/boilerplate") %>

  <style>
     body {
      overflow-x: hidden;
      max-width: 100vw; 
    }

    .filter-container {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      white-space: nowrap;
      padding: 0.5rem;
      width: 100%;
      position: relative;
    }

    #filters {
      display: flex;
      flex-wrap: nowrap;
      align-items: center;
      padding: 0 1rem;
      overflow-x: auto;
      scroll-behavior: smooth;
    }
    #filters::-webkit-scrollbar {
     display: none;
    }
    .filter{
      text-align:center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity:0.7;
      flex: 0 0 auto;
    }
    .filter:hover{
      opacity:1;
      cursor:pointer;
    }
    .filter p{
      font-size:0.8rem;
    }
    .tax-info{
      color:grey;
    }
    .tax-toggle{
      border:1px solid black;
      border-radius: 1rem;
      height:3.25rem;
      margin-left: 3rem;
      padding:1rem;
      display: flex;
      align-items: center;
      
    }

    .scroll-button{
    cursor: pointer;
    padding: 0.5rem;
    font-size:2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    border-radius: 50%;
    transition: 0.3s;
    position: sticky;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background-color: white;
}
#scroll-left {
  left: 10px;
}

#scroll-right {
  right: 10px;
}


@media (max-width: 480px) {
  .tax-toggle {
     display: none;
    }
  .scroll-button{
    display: none;
  }
}
  
</style>
  <div class="filter-container">
    
    <div id="filters">
      
      <div class="filter">
         <div><i class="fa-solid fa-fire"></i></div>
         <p>Trending</p>
       </div>  
       <div class="filter">
         <div><i class="fa-solid fa-bed"></i></div>
         <p>Rooms</p>
       </div>
       <div class="filter">
         <div><i class="fa-solid fa-mountain-city"></i></div>
         <p>Iconic cities</p>
       </div>  
       <div class="filter">
         <div><i class="fa-solid fa-mountain-sun"></i></div>
         <p>Mountains</p>
       </div>
       <div class="filter">
         <div><i class="fa-solid fa-campground"></i></div>
         <p>Camping</p>
       </div>  
       <div class="filter">
         <div><i class="fa-solid fa-snowflake"></i></div>
         <p>Arctic</p>
       </div>
       <div class="filter">
         <div><i class="fa-solid fa-chess-rook"></i></div>
         <p>Castles</p>
       </div>
       <div class="filter">
         <div><i class="fa-solid fa-mug-saucer"></i></div>
         <p>Bed and Breakfast</p>
       </div>
       <div class="filter">
         <div><i class="fa-solid fa-person-swimming"></i></div>
         <p>Amazing Pools</p>
       </div>
       <div class="filter">
         <div><i class="fa-solid fa-tractor"></i></div>
         <p>Farms</p>
       </div>
        <span id="scroll-left" class="scroll-button"><i class="fa-solid fa-circle-chevron-left"></i></span>
        <span id="scroll-right" class="scroll-button"><i class="fa-solid fa-circle-chevron-right"></i></span>

       <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
       
    </div>

  </div>

    
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listings of allListings){ %>
      <a href="/listings/<%=listings._id%>" class="listing-link">
        <div class="card col">
          <img src="<%=listings.image.url%>" class="card-img-top" alt="listings_image" style="height:20rem;">
          <div class="card-img-overlay"><i class="fa-regular fa-heart"></i></div>
          <div class="card-body">
            <p class="card-text"><b>
                <%=listings.title%>
              </b></br>
              &#8377;<%=listings.price.toLocaleString("en-IN")%> / night
              <i class="tax-info">&nbsp; &nbsp;+18%GST</i>
            </p>
          </div>
        </div>
      </a>
      <% } %>
  </div>
  <script>
    let taxswitch = document.getElementById("flexSwitchCheckDefault");
    const updateGSTDisplay = () => {
    let taxinfo = document.getElementsByClassName("tax-info");
    for (let info of taxinfo) {
      if (taxswitch.checked) {
       info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
   };
    taxswitch.addEventListener("click", updateGSTDisplay);
    window.addEventListener("load", () => {
    taxswitch.checked = false;
    updateGSTDisplay();
    });

    const filterContainer=document.getElementById("filters");
    document.getElementById("scroll-left").addEventListener("click", () => {
      filterContainer.scrollBy({ left: -200, behavior: "smooth" });
    });
    document.getElementById("scroll-right").addEventListener("click", () => {
       filterContainer.scrollBy({ left: 200, behavior: "smooth" });
    });
  </script>

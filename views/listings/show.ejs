<%layout("/layouts/boilerplate") %>
<body>
    <style>
        /* General styling for smaller devices */
       @media (max-width: 768px) {
        .row {
        flex-direction: column;
        align-items: center;
        }

        .col-8,
        .col-6,
        .col-3 {
        width: 90%;
        margin: 0 auto;
        }

       .offset-3 {
        margin-left: 0;
      }

        .btns {
        display: flex;
        flex-direction: column;
        align-items: center;
        }

       .btn {
        width: 80%;
        margin-bottom: 10px;
        }

       .add-btn {
        margin-top: 10px;
        }

        #map {
        height: 300px; /* Adjust map size for smaller screens */
        }
    }

    /* Styling for very small devices */
    @media (max-width: 480px) {
       .card {
        width: 100%;
        margin: 10px 0;
        }

       .card-img-top {
        height: auto;
        }
   
       h3, h4 {
       text-align: center;
       font-size: 1.2rem;
       }

      .starability-heart label {
      font-size: 0.8rem;
      } 
    }
    </style>
    <script>
        const maptoken='<%=process.env.MAP_TOKEN%>';
        const listing=<%- JSON.stringify(listing)%>;
    </script>
    <div class="row mt-3">
        <div class="col-8 offset-3">
           <h3><%=listing.title%></h3>
        </div>   
           <div class="card col-6 offset-3">
                <img src="<%=listing.image.url%>" class="card-img-top show-img show-card" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">Hosted by: <i><%=listing.owner.username%></i></p>
                    <p class="card-text"><%=listing.description%></p>
                    <p class="card-text">&#8377;<%=listing.price.toLocaleString("en-IN")%> / night</p>    
                    <p class="card-text"><%=listing.location%></p>    
                    <p class="card-text"><%=listing.country%></p>
                </div>    
            </div>
        
        <% if(currentUser && currentUser._id.equals(listing.owner._id)){%>   
          <div class="btns">
            <a href="/listings/<%=listing._id%>/edit"class="btn btn-dark col-1 offset-3 add-btn" style="height: 37px; line-height: 26px">Edit</a>
            </br> </br>
            <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST">
               <button class="btn btn-dark offset-4" >Delete</button>
            </form>  
          </div>
        <%}%>  
        
    <hr />
            
        <div  class="col-8 offset-3 mb-3">
            <%if(currentUser){%>
            <h4>Leave A Review</h4>
            <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-heart">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                </div>
                
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea id="comment" name="review[comment]" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
              
             </form>
             <hr />
            <%}%> 
            
        </div>

        <%if(listing.reviews.length>0){%>
        <div class="row">
            <h4 class="col-6 offset-3">All Reviews</h4>
            <%for(review of listing.reviews){%>
                <div class="card col-3 offset-3">
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Author:</strong> @ <%=review.author.username%></br>
                            <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                            <strong>Comment:</strong> <%=review.comment%>
                        </p>
                    </div>  
                    <form  action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-outline-dark mb-3 mt-3">Delete</button>
                    </form>  
                </div>
            <%}%>
        </div>
        <%}%>
        <div class="col-6 offset-3">
            <h4>Where you'll be</h4>
            <div id="map" class="mb-3"></div>
        </div>
    </div> 
    <script src="/js/map.js"></script>
</body>
